<div class="container">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<h4 class="text-center"> <%= titulo %> </h4>
			<form role="form" action="/actualizar_personal" method="post">
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				<input type="hidden" class="form-control" name="id" value="<%= personal.id %>" hiden>
				<div class="form-group">
					<label> DNI </label>
					<input type="text" class="form-control" name="dni" value="<%= personal.dni %>">
				</div>
				<div class="form-group">
					<label> Nombre </label>
					<input type="text" class="form-control" name="nombre" value="<%= personal.nombre %>">
				</div>
				<div class="form-group">
					<label> Apellidos </label>
					<input type="text" class="form-control" name="apellidos" value="<%= personal.apellidos %>">
				</div>
				<div class="form-group">
					<label> Teléfono </label>
					<input type="tel" class="form-control" name="telefono" value="<%= personal.telefono %>">
				</div>
				<div class="form-group">
					<label> Dirección </label>
					<input type="text" class="form-control" name="direccion" value="<%= personal.direccion %>">
				</div>
				<div class="form-group">
					<label> Email </label>
					<input type="email" class="form-control" name="email" value="<%= personal.email %>">
				</div>
				<div class="form-group">
					<label> Cargo </label>
					<select class="form-control" name="cargo" value="<%= personal.cargo %>">
						<% if(personal.cargo == "Gerente") { %>
							<option value="Gerente" selected> Gerente </option>
						<% } else { %>
							<option value="Gerente"> Gerente </option>
						<% } %>
						<% if(personal.cargo == "Secretaria") { %>
							<option value="Secretaria" selected> Secretaria </option>
						<% } else { %>
							<option value="Secretaria"> Secretaria </option>
						<% } %>
						<% if(personal.cargo == "Asistente") { %>
							<option value="Asistente" selected> Asistente </option>
						<% } else { %>
							<option value="Asistente"> Asistente </option>
						<% } %>
					</select>
				</div>
				<div class="form-group">
					<label> Área </label>
					<input type="text" class="form-control" name="area" value="<%= personal.area %>">
				</div>
				<div class="form-group">
					<label> Salario </label>
					<input type="text" class="form-control" name="salario" value="<%= personal.salario %>">
				</div>
				<div class="form-group">
					<label> Horario </label>
					<input type="text" class="form-control" name="horario" value="<%= personal.horario %>">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary"> Actualizar </button>
				</div>
			</form>
		</div>
	</div>
</div>