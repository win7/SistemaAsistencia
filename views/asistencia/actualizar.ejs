<div class="container">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<h4 class="text-center"> <%= titulo %> </h4>
			<form role="form" action="/actualizar_asistencia" method="post">
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				<input type="hidden" class="form-control" name="id" value="<%= asistencia.id %>" hiden>
				<div class="form-group">
					<label> Fecha </label>
					<input type="date" class="form-control" name="fecha" value="<%= asistencia.fecha.toISOString().substr(0, 10) %>">
				</div>
				<div class="form-group">
					<label> Hora </label>
					<input type="time" class="form-control" name="hora" value="<%= asistencia.hora %>">
				</div>
				<div class="form-group">
					<label> Personal </label>
					<input type="text" class="form-control" name="personal" value="<%= asistencia.personal %>">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary"> Actualizar </button>
				</div>
			</form>
		</div>
	</div>
</div>