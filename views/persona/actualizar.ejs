<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h4 class="text-center"> <%= titulo %> </h4>
      <form role="form" action="/actualizar_persona" method="post">
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <input type="hidden" class="form-control" name="id" value="<%= persona.id %>" hiden>
        <div class="form-group">
          <label> Nombre </label>
          <input type="text" class="form-control" name="nombre" value="<%= persona.nombre %>">
        </div>
        <div class="form-group">
          <label> Apellidos </label>
          <input type="text" class="form-control" name="apellidos" value="<%= persona.apellidos %>">
        </div>
        <div class="form-group">
          <label> Edad </label>
          <input type="number" class="form-control" name="edad" value="<%= persona.edad %>">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary"> Actualizar </button>
        </div>
      </form>
    </div>
  </div>
</div>