<div class="container">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<h4 class="text-center"> <%= titulo %> </h4>
			<form role= "form" action="/crear_sancion" method="post">
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				<div class="form-group">
					<label> Fecha </label>
					<input type="date" class="form-control" name="fecha">
				</div>
				<div class="form-group">
					<label> Hora </label>
					<input type="time" class="form-control" name="hora">
				</div>
				<div class="form-group">
					<label> Causa </label>
					<textarea class="form-control" name="causa"></textarea>
				</div>
				<div class="form-group">
					<label> Personal </label>
					<select class="form-control" name="personal">
					<% for(var i = 0; i < personales.length; i++) {
					var item = personales[i];
					%>
						<option value="<%= item.id %>"> <%= item.nombre %> <%= item.apellidos %> </option>
					<% } %>
					</select>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary"> Guardar </button>
				</div>
			</form>
		</div>
	</div>
</div>