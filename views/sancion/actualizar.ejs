<div class="container">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<h4 class="text-center"> <%= titulo %> </h4>
			<form role="form" action="/actualizar_sancion" method="post">
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				<input type="hidden" class="form-control" name="id" value="<%= sancion.id %>" hiden>
				<div class="form-group">
					<label> Fecha </label>
					<input type="date" class="form-control" name="fecha" value="<%= sancion.fecha.toISOString().substr(0, 10) %>">
				</div>
				<div class="form-group">
					<label> Hora </label>
					<input type="time" class="form-control" name="hora" value="<%= sancion.hora %>">
				</div>
				<div class="form-group">
					<label> Causa </label>
					<textarea type="text" class="form-control" name="causa"> <%= sancion.causa %> </textarea>
				</div>
				<div class="form-group">
					<label> Personal </label>
					<select class="form-control" name="personal" value="<%= sancion.personal %>">
					<% for(var i = 0; i < personales.length; i++) {
					var item = personales[i];
					%>
						<% if(item.id == sancion.personal) { %>
							<option value="<%= item.id %>" selected> <%= item.nombre %> <%= item.apellidos %> </option>
						<% } else { %>
							<option value="<%= item.id %>"> <%= item.nombre %> <%= item.apellidos %> </option>
						<% } %>
					<% } %>
					</select>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary"> Actualizar </button>
				</div>
			</form>
		</div>
	</div>
</div>